{
  "name": "@readme/syntax-highlighter",
  "description": "Syntax highlighter used on ReadMe.io",
  "version": "0.3.2",
  "dependencies": {
    "@readme/variable": "^0.0.0",
    "codemirror": "^5.31.0",
    "react": "^16.4.1"
  },
  "scripts": {
    "lint": "eslint -f unix . --ext .jsx --ext .js",
    "inspect": "jsinspect",
    "prettier": "prettier --list-different \"./**/**.{js,jsx}\"",
    "pretest": "npm run lint && npm run inspect && npm run prettier",
    "test": "jest --coverage"
  },
  "jest": {
    "setupFiles": [
      "./lib/enzyme"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org",
    "access": "public"
  },
  "author": "Dom Harrington <dom@harrington-mail.com>",
  "license": "ISC",
  "repository": "https://github.com/readmeio/api-explorer/tree/master/packages/syntax-highlighter",
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-react-adapter-future": "^1.1.3",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^22.0.4",
    "jsinspect": "^0.12.6",
    "prettier": "^1.6.1"
  }
}
